<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>AirStay Navbar</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

  <style>
    /* Airbnb Style Search Bar */
    .search-bar {
      position: relative;
      background: #f1f1f1;
      border-radius: 999px;
      padding: 0.3rem 0.6rem;
      gap: 0.5rem;
    }

    .search-input {
      border: none;
      background: transparent;
      width: 200px;
      outline: none;
      font-size: 0.9rem;
      padding-left: 0.5rem;
    }

    .search-input::placeholder {
      color: #888;
    }

    .btn-search {
      background-color: #ff385c;
      border: none;
      color: white;
      border-radius: 999px;
      padding: 0.4rem 0.8rem;
      transition: background 0.2s ease-in-out;
    }

    .btn-search:hover {
      background-color: #e03150;
    }

    @media (max-width: 768px) {
      .search-bar {
        display: none;
      }
    }

    /* Mobile search visible only on small screens */
    .mobile-search {
      display: none;
    }

    @media (max-width: 768px) {
      .mobile-search {
        display: flex;
        margin-top: 0.75rem;
      }
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-md bg-white border-bottom sticky-top shadow-sm">
    <div class="container-fluid">
      <!-- Brand -->
      <a class="navbar-brand d-flex align-items-center gap-2 text-danger fw-bold" href="/listings">
        <i class="fa-solid fa-house"></i> AirStay
      </a>

      <!-- Toggler -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar Content -->
      <div class="collapse navbar-collapse justify-content-between" id="navbarNavAltMarkup">
        <!-- Left: Links -->
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>

        <!-- Center: Search bar (desktop only) -->
        <form class="d-none d-md-flex align-items-center search-bar" action="/listings/search" method="GET">
          <input class="form-control search-input" type="text" placeholder="Search listings..." name="q" />
          <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
        </form>

        <!-- Right: Auth Buttons -->
        <div class="navbar-nav ms-md-0 ms-auto gap-2">
          <a class="nav-link" href="/listings/new">AirStay your home</a>
          <!-- Dynamic Auth Buttons -->
          <!-- Simulate EJS logic -->
          <!-- Dynamic Auth Buttons -->
          <% if (!user) { %>
            <a class="btn btn-outline-dark" href="/login"><b>Login</b></a>
            <a class="btn btn-danger" href="/signup"><b>Sign Up</b></a>
            <% } else { %>
              <a class="btn btn-outline-secondary" href="/logout"><b>Logout</b></a>
              <% } %>

        </div>
      </div>

      <!-- Mobile search bar (visible only on small screens) -->
      <form class="mobile-search w-100 d-md-none px-2" action="/listings/search" method="GET">
        <input class="form-control me-2" type="search" placeholder="Search..." name="q">
        <button class="btn btn-danger ms-2" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
    </div>
  </nav>

  <!-- Bootstrap JS (required for navbar toggler) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>