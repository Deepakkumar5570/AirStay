<% layout("/layouts/boilerplate") %>


<h3 class="mb-4 fw-semibold">Explore Nearby Stays</h3>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
  <% for (let listing of allListings) { %>
    <div class="col">
      <div class="card listing-card border-0 shadow-sm h-100">

        <!-- Image with link -->
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="image-container">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" />
          </div>
        </a>

        <!-- Text Body -->
        <div class="card-body px-3 pb-3">
          <p class="card-title fw-semibold mb-1 text-dark"><%= listing.title %></p>
          <p class="card-text text-muted mb-0">
            â‚¹<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
          </p>
        </div>

      </div>
    </div>
  <% } %>
</div>
