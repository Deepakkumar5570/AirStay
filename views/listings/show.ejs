<% layout("/layouts/boilerplate") %>

  <div class="container mt-5 mb-3">
    <div class="row show-container">
      <!-- Image Section -->
      <div class="col-md-6">
        <img src="<%= listing.image.url %>" alt="Listing Image" class="img-fluid rounded show-main-img" />
      </div>

      <!-- Info Section -->
      <div class="col-md-6">
        <div class="show-content p-4">
          <h1 class="mb-3">
            <%= listing.title %>
          </h1>
          <h5 class="text-muted mb-2">
            <i class="fa-solid fa-location-dot"></i>
            <%= listing.location %>, <%= listing.country %>
          </h5>

          <hr>

          <p class="mb-4">
          <p class="card-text">Owned By <i>
              <%= listing.owner.username %>
            </i></p>
          <%= listing.description %>
            </p>

            <h3 class="mb-3 text-success">
              ₹<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
                <small class="text-muted fs-6">/ night</small>
            </h3>

            <!-- ✅ Only Owner Can See Edit/Delete -->
            <% if (user && user._id.toString()===listing.owner._id.toString()) { %>
              <div class="d-flex gap-3">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary px-4">Edit</a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                  <button class="btn btn-outline-danger px-4"
                    onclick="return confirm('Are you sure you want to delete this listing?')">Delete</button>
                </form>
              </div>
              <% } %>

                <hr class="my-4" />
                <a href="/listings" class="btn btn-light border mt-4 back-btn">
                  <i class="fa-solid fa-arrow-left me-2"></i> Back to Listings
                </a>
        </div>
      </div>
    </div>

    <hr class="my-4" />

    <!-- ✅ Only logged-in user can leave a review -->
    <% if (user) { %>
      <div class="row mt-5">
        <div class="col-md-6 offset-md-0">
          <div class="card border-0 shadow-sm review-form-box">
            <div class="card-body">
              <h4 class="card-title mb-4">Leave a Review</h4>
              <form method="POST" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
                <div class="mb-3">
                  <label for="rating" class="form-label">Rating</label>
                  <select id="rating" name="review[rating]" class="form-select" required>
                    <option value="">Choose rating</option>
                    <option value="5">★★★★★ (5)</option>
                    <option value="4">★★★★☆ (4)</option>
                    <option value="3">★★★☆☆ (3)</option>
                    <option value="2">★★☆☆☆ (2)</option>
                    <option value="1">★☆☆☆☆ (1)</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="comment" class="form-label">Comment</label>
                  <textarea id="comment" name="review[comment]" class="form-control" rows="4"
                    placeholder="Write your feedback..." required></textarea>
                  <div class="invalid-feedback">Please provide a comment.</div>
                </div>
                <div class="text-end">
                  <button class="btn btn-success px-4">Submit Review</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% } %>

        <!-- REVIEW LIST -->
        <% if (listing.reviews.length> 0) { %>
          <hr class="my-5" />
          <h4 class="mb-4">
            <i class="fa-solid fa-comments me-2 text-primary"></i>What others are saying
          </h4>

          <div class="row g-4" id="review-grid">
            <% listing.reviews.forEach((review, idx)=> { %>
              <div class="col-lg-4 col-md-6 mb-4 review-card d-none fade-in">
                <div class="card border-0 shadow-sm h-100 animate-review">
                  <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                      <!-- Stars -->
                      <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="text-warning fs-5">
                          <% for (let i=0; i < review.rating; i++) { %>
                            <i class="fa-solid fa-star"></i>
                            <% } %>
                              <% for (let i=review.rating; i < 5; i++) { %>
                                <i class="fa-regular fa-star"></i>
                                <% } %>
                        </div>

                        <!-- ✅ Only review author can edit/delete -->
                        <% if (user && review.author && user._id.toString()===review.author._id.toString()) { %>
                          <div class="d-flex gap-2">
                            <a href="/listings/<%= listing._id %>/reviews/<%= review._id %>/edit"
                              class="btn btn-sm btn-outline-secondary">
                              <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <form method="POST"
                              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                              <button class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Delete this review?')">
                                <i class="fa-solid fa-trash"></i>
                              </button>
                            </form>
                          </div>
                          <% } %>
                      </div>

                      <!-- Comment -->
                      <p class="mb-2 text-muted">
                        <%= review.comment %>
                      </p>
                    </div>

                    <!-- Reviewer Info -->
                    <small class="text-muted text-end mt-auto">
                      — <strong>
                        <%= review.name || 'Anonymous' %>
                      </strong>,
                      <%= new Date(review.createdAt).toLocaleDateString("en-IN", { year: 'numeric' , month: 'short' ,
                        day: 'numeric' }) %>
                    </small>
                  </div>
                </div>
              </div>
              <% }) %>
          </div>

          <!-- Load More Reviews -->
          <div class="text-center">
            <button id="load-more" class="btn btn-outline-primary mt-3">Load More Reviews</button>
          </div>

          <% } else { %>
            <p class="text-muted mt-4 fst-italic">No reviews yet. Be the first to leave your feedback!</p>
            <% } %>

  </div>