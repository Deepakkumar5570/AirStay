<% layout("/layouts/boilerplate") %>

<div class="container mt-5 mb-5">
  <div class="row show-container">
    <!-- Image Section -->
    <div class="col-md-6">
      <img src="<%= listing.image.url %>" alt="Listing Image" class="img-fluid rounded show-main-img" />
    </div>

    <!-- Info Section -->
    <div class="col-md-6">
      <div class="show-content p-4">
        <h1 class="mb-3"><%= listing.title %></h1>
        <h5 class="text-muted mb-2">
          <i class="fa-solid fa-location-dot"></i>
          <%= listing.location %>, <%= listing.country %>
        </h5>

        <hr>

        <p class="mb-4"><%= listing.description %></p>

        <h3 class="mb-3 text-success">
          â‚¹<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> <small class="text-muted fs-6">/ night</small>
        </h3>

        <div class="d-flex gap-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary px-4">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-outline-danger px-4" onclick="return confirm('Are you sure you want to delete this listing?')">Delete</button>
          </form>
        </div>

<a href="/listings" class="btn btn-light border mt-4 back-btn">
  <i class="fa-solid fa-arrow-left me-2"></i> Back to Listings
</a>

      </div>
    </div>
  </div>
</div>
